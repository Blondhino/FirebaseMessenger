<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:background="@color/darkGreyBackground"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatRoomUserImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="2dp"
        android:src="@mipmap/ic_launcher"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/seenIndicator"
        android:layout_toRightOf="@id/chatRoomUserImage"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/chatRoomUserNickname"
            android:text="Ruda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteTextColor"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/chatRoomMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@id/chatRoomUserNickname"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="sdlkdjfls s fjlskdjfsld  jsldfjsl훾dkfj   sdlfjs훾ldkfjs훾ldfkjsldfjs d 훾sdlfkjsd f"
            android:layout_marginBottom="5dp"
            android:textColor="#576574"
            />

    </RelativeLayout>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_below="@id/chatRoomUserImage"
    android:layout_toRightOf="@id/chatRoomUserImage"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    android:background="#B3576574"
    />
    <ImageView
        android:visibility="gone"
        android:id="@+id/seenIndicator"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="2dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/seen"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/timeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/disabledButtonGrey"
        android:textSize="10sp"
        />
</RelativeLayout>