<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:elevation="5dp"
    app:cardBackgroundColor="@color/dialogBackground"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18sp"
            android:text="Enter your NickName :"
            android:fontFamily="sans-serif-light"
            android:layout_centerHorizontal="true"
            />

        <EditText
            android:layout_below="@id/title"
            android:id="@+id/nickNameEditTex"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:hint="Nickname..."
            android:padding="10dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="sans-serif-light"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/nicknameSubmitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nickNameEditTex"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_button_disabled"
            android:text="Submit"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/dialogBackground"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>