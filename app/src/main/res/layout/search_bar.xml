<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/darkGreyBackground"
    android:gravity="center"
    android:weightSum="100" android:layout_height="wrap_content">
    <EditText
        android:id="@+id/search_barEditText"
        android:layout_width="0dp"
        android:layout_weight="90"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text"
        android:layout_margin="10dp"
        android:hint="Search for users..."
        android:padding="10dp"
        android:textColor="@color/whiteTextColor"
        android:textColorHint="@color/disabledButtonGrey"
        />


</LinearLayout>